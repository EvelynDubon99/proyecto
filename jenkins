pipeline{
        agent any
            tools { 
                    maven 'MAVEN_HOME'
                }
            stages {
                stage('conexion') {
                    steps {

                         git 'https://github.com/EvelynDubon99/proyecto'
                    }
                }
                stage('Build') {
                    steps {
                            sh 'mvn package'
                    }

                }
                stage('Sonarqube'){
                        steps {
                             
                                withSonarQubeEnv('sonarq') {
                                      sh 'mvn clean verify sonar:sonar -Dsonar.password= -Dsonar.login=3f94c9eae851f6f9951023fb5bb9c445513db527'
                                }
                    
                                
                             }
                              
                            }
                 stage("Quality Gate"){
                steps {
                    script {
                        timeout(time: 1, unit: 'HOURS') {
                            def qg = waitForQualityGate()
                            if (qg.status != 'OK') {
                               mail bcc: '',
                               body: 'El pipeline a fallado revisa el codigo', cc: '', 
                               from: '', replyTo: '',
                               subject: 'Jenkins pipeline no ha tenido exito, revisar el codigo nuevamente antes de hacer el merge', 
                               to: 'castaneda161618@unis.edu.gt'
                               error "Pipeline aborted due to quality gate failure: ${qg.status}"
                        }
                    }
                }
            }
        }

                 
                 }

                }
                 
                

             
                
}
